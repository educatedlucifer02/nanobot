# nanobot Environment Variables Configuration
# Copy this file to .env and fill in your values for local development
# For Render deployment, set these in the Render dashboard or render.yaml

# ============ LLM Provider Configuration ============

# Gemini API Key - Get from https://aistudio.google.com/app/apikey
NANOBOT_PROVIDERS__GEMINI__API_KEY=your_gemini_api_key_here

# ============ Channel Configuration ============

# Telegram Bot Token - Get from @BotFather on Telegram
NANOBOT_CHANNELS__TELEGRAM__TOKEN=your_telegram_bot_token_here

# Enable Telegram channel (set to "true" to enable)
NANOBOT_CHANNELS__TELEGRAM__ENABLED=true

# Restrict to specific Telegram user IDs (comma-separated list)
# Only users whose ID matches this list can interact with the bot
NANOBOT_CHANNELS__TELEGRAM__ALLOW_FROM=["8025985115"]

# ============ Agent Configuration ============

# Default LLM model (change this to use different models)
# Modal Gemini 3 Flash Preview: gemini-3-flash-preview-2025-02-05
# Standard Gemini: gemini-1.5-flash, gemini-1.5-pro
# Other options: anthropic/claude-opus-4-5, openai/gpt-4o, etc.
NANOBOT_AGENTS__DEFAULTS__MODEL=gemini-3-flash-preview-2025-02-05

# ============ Gateway Configuration ============

NANOBOT_GATEWAY__HOST=0.0.0.0
NANOBOT_GATEWAY__PORT=18790

# ============ Python Configuration ============

# Ensure logs are streamed in real-time
PYTHONUNBUFFERED=1
